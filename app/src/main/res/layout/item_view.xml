<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageviewitem"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="13dp"
                android:background="@drawable/round_background"
                />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LinearVistaLayoutItem"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/imageviewitem"
                    android:orientation="vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/imageviewitem">

                    <TextView
                        android:id="@+id/nameitem"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="2dp"
                        tools:text="Upwork"
                        android:fontFamily="@font/manjari_bold"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/cateritem"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="2dp"
                            tools:text="Work"

                            android:fontFamily="@font/manjari_thin"/>
                        <TextView
                            android:layout_marginStart="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Â·"
                            android:fontFamily="@font/manjari_thin"/>
                        <TextView
                            android:id="@+id/fechaitem"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="2dp"
                            tools:text="15 Febrero"
                            android:textStyle="italic"
                            android:fontFamily="@font/manjari_thin"/>



                    </LinearLayout>


                </LinearLayout>

            <TextView
                android:id="@+id/precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/manjari_bold"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="35dp"
                android:textSize="20dp"
                android:textStyle="bold"
                tools:text="$100.00" />
            <ImageView
                android:id="@+id/imagIcon"
                android:layout_width="32dp"
                android:layout_height="33dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_background"
                />


        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
